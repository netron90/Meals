<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:paddingTop="16dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/otherMenuCompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textStyle="italic"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/card_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="@dimen/cardview_default_elevation"
        android:layout_below="@id/otherMenuCompanyName"
        >

                <ImageView
                    android:id="@+id/otherMenu"
                    android:layout_width="200dp"
                    android:layout_height="230dp"
                    android:src="@drawable/meals_logo_no_shadow"
                    android:scaleType="centerCrop"
                    />

    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_item">
        <TextView
            android:id="@+id/otherMealName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginTop="16dp"

            android:text=""/>

        <TextView
            android:id="@+id/otherMealPrice"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/otherMealName"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:text=""
            android:textColor="@color/colorAccent"
            android:textStyle="bold"/>
    </RelativeLayout>

</RelativeLayout>