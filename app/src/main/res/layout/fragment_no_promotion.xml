<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.promotion.NoPromotionFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="60"
                    android:background="@drawable/no_promotion">


                </RelativeLayout>
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:maxHeight="50dip"
                    android:minHeight="50dip"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/circular_progressbar"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="40"
                    >

                    <TextView
                        android:id="@+id/noPromotionText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:text="@string/no_promotion_text"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="26dp"
                        android:layout_marginRight="16dp"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>



    </LinearLayout>


</FrameLayout>